{% extends "_layout.twig" %}

{% block title %}Login{% endblock %}

	{% block content %}
{% if secretclub %}
<p class="center error">This instance of music-web requires you to log in to view content.</p>
<p class="center">After logging in you will be redirected to your previously requested page.</p>
{% endif %}
<div class="loginbox">
	<h2>Login</h2>

	<form method="POST" action="login.php">
		<input type="hidden" name="rdir" value="{{ rdir }}">
		<p>
			<span>Username:</span>
			<input type="text" name="name" size="25" maxlength="25">
		</p>
		<p>
			<span>Password:</span>
			<input type="password" name="pass" size="25" maxlength="32">
		</p>
		{% if error %}
			<p class="error">{{ error }}</p>
		{% endif %}
		<p><input type="submit" class="submit" name="action" value="Login"></p>
	</form>
</div>
	{% endblock %}